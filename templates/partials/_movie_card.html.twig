<article class="movie-card" data-movie-id="{{ movie.id }}">
    <img src="https://image.tmdb.org/t/p/w300{{ movie.posterPath }}" alt="{{ movie.title }}" class="movie-poster">
    <div class="movie-info">
        <div class="movie-header">
            <h3>{{ movie.title }}</h3>
            <div class="rating">
                <div class="stars">
                    {% set rating = movie.voteAverage / 2 %}
                    {% for i in 1..5 %}
                        {% if i <= rating|round(0, 'floor') %}
                            <i class="fas fa-star"></i>
                        {% elseif i - 0.5 <= rating %}
                            <i class="fas fa-star-half-alt"></i>
                        {% else %}
                            <i class="fas fa-star" style="color: #e4e5e9;"></i>
                        {% endif %}
                    {% endfor %}
                </div>
                <span class="votes">({{ movie.voteCount }} votes)</span>
            </div>
        </div>
        <span class="year">{{ movie.releaseDate|date('Y') }}</span>
        <div class="user-rating" data-movie-id="{{ movie.id }}">
            <p>Votre note :</p>
            <div class="user-stars">
                {% for i in 1..5 %}
                    <i class="fas fa-star user-star" data-rating="{{ i }}"></i>
                {% endfor %}
            </div>
        </div>
        <p class="description">
            {{ movie.overview|length > 150 ? movie.overview|slice(0, 150) ~ '...' : movie.overview }}
        </p>
        <button class="details-button">Lire les d√©tails</button>
    </div>
</article>